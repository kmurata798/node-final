<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/posts/new" method="post">
      <legend>New Post</legend>
      <h6>(<strong style="font-size: 25px; color:rgb(131, 53, 69)"> * </strong>= Required Field )</h6>
      <div class="form-group">
        <label for="post-title" style="font-size: 25px; ">Title <strong style="color:rgb(131, 53, 69)">*</strong></label>
        <input type="text" name="title" class="form-control" id="post-title" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="post-url" style="font-size: 25px; ">Url</label>
        <input type="url" name="url" class="form-control" id="post-url" placeholder="https://www.google.com">
      </div>
      <div class="form-group">
        <label for="post-img" style="font-size: 25px; ">Image</label>
        <input type="img" name="img" class="form-control" id="post-img" placeholder="Image Address">
      </div>
      <div class="form-group">
        <label for="post-summary" style="font-size: 25px; ">Summary <strong style="color:rgb(131, 53, 69)">*</strong></label>
        <textarea name="summary" class="form-control" id="post-summary" placeholder="Title"></textarea>
      </div>
      <div class="form-group">
        <label for="post-category" style="font-size: 25px; ">Category <strong style="font-size: 20px; color:rgb(12, 109, 95)">[Optional]</strong></label>
        <input name="category" type="text" class="form-control" id="post-category" placeholder="Category">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </div>
</div>