<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/sign-up" method="post">
      <legend>Sign up</legend>
      <div class="form-group">
        <label for="sign-up-username">Username</label>
        <input type="text" name="username" class="form-control" id="sign-up-username" placeholder="Username">
      </div>
      <div class="form-group">
        <label for="sign-up-password">Password</label>
        <input type="Password" name="password" class="form-control" id="sign-up-password" placeholder="Password">
      </div>

      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Sign up</button>
      </div>
    </form>
  </div>
</div>